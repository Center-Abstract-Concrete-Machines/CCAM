---
import { Image, Picture } from 'astro:assets';
const { name, description, image, slug } = Astro.props;
---

<div class="flex flex-col gap-2 items-center text-center">
    <a href=`/about/${slug}`>
        <div transition:name=`image-${slug}`>
            <Picture
                src={image.url}
                alt={image.alt}
                widths={[400, 600, 1200, image.url.width]}
                sizes="(min-width: 640px) 33vw, 100vw"
            />
        </div>
        <p class="text-lg font-medium">{name}</p>
    </a>
    <p class="font-mono text-sm">{description}</p>
</div>

<style>
    p {
        text-wrap: balance;
    }
</style>
