---
import { isDateUpcoming } from 'src/utils/programFilters';

const { date } = Astro.props;

function returnDateStatus(endDate) {
    if (endDate === 'ongoing') {
        return 'Ongoing';
    } else if (isDateUpcoming(endDate)) {
        return 'Upcoming';
    } else {
        return 'Past';
    }
}
---

<div
    class="text-neutral-50 whitespace-nowrap bg-neutral-900 dark:bg-neutral-800 px-4 py-2"
>
    {returnDateStatus(date)}
</div>
