---
import { Image } from 'astro:assets';
import HorizontalSpacer from '@components/HorizontalSpacer.astro';
import ThemeToggle from '@components/ThemeToggle.astro';
import Brackets from '@components/Brackets.astro';
import EmailSignup from '@components/EmailSignup.jsx';
import Logo from '/src/svg/logo.svg';
---

<!-- Mailing List -->
<div class="px-4 mt-24">
    <HorizontalSpacer class="mb-4" />
    <Brackets class="min-h-[15rem] sm:min-h-[20rem]">
        <div class="max-w-sm text-center flex flex-col gap-4 min-w-0">
            <h3 class="text-2xl font-medium">
                Stay up to date by signing <br />up for our newsletter
            </h3>
            <EmailSignup client:load />
        </div>
    </Brackets>
</div>

<div class="pt-4">
    <!-- Image/Sketch -->
    <div class="ccam-container grid place-items-center min-h-80 relative">
        <div class="absolute w-full h-full -z-10" id="sketch"></div>
        <Image
            src={Logo}
            alt="CCAM"
            class="w-11/12 h-5/6 pointer-events-none select-none dark:invert"
        />
    </div>

    <!-- Footer -->
    <div class="flex justify-between items-center py-2 text-xs gap-x-4">
        <p class="ps-2">&copy; Center for Concrete and Abstract Machines</p>
        <div class="flex gap-4 items-center ml-auto">
            <span class="hidden sm:inline">Pilsen, Chicago</span>
            <span class="hidden sm:inline">5:24PM</span>
            <div class="theme-toggle">
                <ThemeToggle />
            </div>
        </div>
    </div>
</div>

<script>
    import './sketch/placeholder.js';
</script>
