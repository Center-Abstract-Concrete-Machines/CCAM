---
import { Image } from 'astro:assets';
import CCAMFooter from './CCAM-footer.png';
import HorizontalSpacer from '../HorizontalSpacer.jsx';
import ThemeToggle from '../ThemeToggle.astro';
import Brackets from '../Brackets.astro';
import EmailSignup from '../EmailSignup.jsx';
import Logo from '/src/svg/logo.svg';
---

<!-- Mailing List -->
<div class="px-4 mt-24">
    <HorizontalSpacer />
    <Brackets class="min-h-[15rem] sm:min-h-[20rem]">
        <div class="max-w-sm text-center flex flex-col gap-4 min-w-0">
            <h3 class="text-2xl font-medium">
                Stay up to date by signing <br />up for our newsletter
            </h3>
            <EmailSignup client:load />
        </div>
    </Brackets>
</div>

<div class="pt-4">
    <!-- Image/Sketch -->
    <div class="ccam-container grid place-items-center min-h-80 relative">
        <!-- <Image src={CCAMFooter} alt="CCAM" class="dark:invert dark:grayscale" /> -->
        <div
            class="absolute w-full h-full -z-10 bg-gradient-to-r from-Green via-Orange to-Purple"
            id="sketch"
        >
        </div>
        <Image
            src={Logo}
            alt="CCAM"
            class="z-10 w-11/12 h-5/6 pointer-events-none"
        />
    </div>

    <!-- Footer -->
    <div class="flex justify-between items-center py-2 text-xs gap-x-4">
        <p class="ps-2">&copy; Center for Concrete and Abstract Machines</p>
        <div class="flex gap-4 items-center ml-auto">
            <span class="hidden sm:inline">Pilsen, Chicago</span>
            <span class="hidden sm:inline">5:24PM</span>
            <div class="theme-toggle">
                <ThemeToggle />
            </div>
        </div>
    </div>
</div>

<!-- <script src="./placeholder.js"></script> -->
<script src="/p5/p5.min.js" is:inline defer></script>
<script src="/p5/placeholder.js" is:inline defer></script>
