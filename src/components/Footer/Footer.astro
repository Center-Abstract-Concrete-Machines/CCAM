---
import { Image } from 'astro:assets';
import CCAMFooter from './CCAM-footer.png';
import HorizontalSpacer from '../HorizontalSpacer.astro';
import ThemeToggle from '../ThemeToggle.astro';
import Brackets from '../Brackets.astro';
import EmailSignup from '../EmailSignup.jsx';
---

<!-- Mailing List -->
<div class="px-4 mt-24">
    <HorizontalSpacer />
    <Brackets class="min-h-[15rem] sm:min-h-[20rem]">
        <div class="max-w-sm text-center flex flex-col gap-4 min-w-0">
            <h3 class="text-2xl font-medium">
                Stay up to date by signing <br />up for our newsletter
            </h3>
            <EmailSignup client:load />
