---
import { Image } from 'astro:assets';

const { title, metadata, imagePath, imageAlt, tags } = Astro.props;
const images = import.meta.glob('/src/content/programs/**/*.png');
---

<div class="flex flex-col justify-between items-start p-4">
    <Image
        src={images[imagePath]()}
        alt={imageAlt}
        class="aspect-[1.5] object-contain object-center w-full overflow-hidden max-w-full"
    />
    <h1
        class="text-neutral-900 text-4xl font-medium leading-10 tracking-tight w-full mt-6"
    >
        {title}
    </h1>
    <div class="mt-6">
        {metadata.dates} | {metadata.time} | {metadata.location}
    </div>
    <div class="flex gap-2 mt-4 grow">
        <!-- TODO: add date checking -->
        <a
            href="#"
            class="text-neutral-50 whitespace-nowrap bg-neutral-900 px-4 py-2"
            >Upcoming</a
        >
        {
            tags.map((tag) => (
                <a
                    href="#"
                    class="text-neutral-900 text-lg whitespace-nowrap bg-lime-400 px-4 py-2"
                >
                    {tag}
                </a>
            ))
        }
    </div>
</div>
