---
const { type, active } = Astro.props;

const colorMap = new Map([
    ['all', 'bg-backgoundColor text-textColor border border-textColor'],
    ['book', 'bg-Orange text-Black'],
    ['website', 'bg-Green text-Black'],
    ['image', 'bg-Yellow text-Black'],
    ['video', 'bg-Purple text-White'],
    ['codebase', 'bg-Blue'],
    ['article', 'bg-Orange/50'],
    ['magazine', 'bg-Green/50'],
    ['periodical', 'bg-Yellow/50'],
    ['organization', 'bg-Purple/50'],
    ['link', 'bg-Blue/50'],
    ['tutorial', 'bg-Yellow text-Black'],
    // below are for tags search results
    ['event', 'bg-Blue text-Black'],
    ['workshop', 'bg-Orange text-Black'],
    ['study', 'bg-Green text-Black'],
    ['project', 'bg-textColor/10'],
]);

function colorFromType(type: string) {
    return colorMap.get(type.toLowerCase());
}

function colorFromActivity(type: string) {
    if (active) return colorFromType(type);
    if (active === undefined) return colorFromType(type);
    if (active === false)
        return 'bg-backgoundColor text-textColor border border-textColor/20';
}
---

<div
    class=`capitalize flex w-fit justify-center items-center px-4 py-2 whitespace-nowrap ${colorFromActivity(type)}`
>
    {type}
</div>
