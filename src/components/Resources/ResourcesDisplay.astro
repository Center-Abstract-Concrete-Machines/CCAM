---
import { getCollection } from 'astro:content';

import ResourceCard from './ResourceCard.astro';

// Most recent on top
const resources = (await getCollection('resources')).sort((a,b) => b.data.dateAdded - a.data.dateAdded);
console.log('resources', resources)

---

<div class="p-4">
    <div class="header flex justify-between items-center">
        <h2 class="text-2xl font-medium">Resources</h2>
        <button class="border border-dashed border-black px-4 py-2">View All</button>
    </div>
    <div class="pt-4">
        {resources.map(resource => (
            <ResourceCard metadata={resource.data} />
        ))}
    </div>
</div>


