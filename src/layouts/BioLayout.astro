---
import BasicMarkdownLayout from './BasicMarkdownLayout.astro';
import { Image, Picture } from 'astro:assets';

const { name, description, image } = Astro.props.frontmatter;
const { slug } = Astro.props;
---

<BasicMarkdownLayout frontmatter={{ title: name }}>
    <div transition:name=`image-${slug}`>
        <Picture
            src={image.url}
            alt={image.alt}
            class="mx-auto"
            widths={[400, 600, 1200, image.url.width]}
        />
    </div>
    <h1 class="text-center">{name}</h1>
    <h2 class="text-center">{description}</h2>
    <slot />
</BasicMarkdownLayout>
