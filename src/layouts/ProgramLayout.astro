---
import Base from '@layouts/Base.astro';
import Gallery from '@components/Gallery.astro';
import HorizontalSpacer from '@components/HorizontalSpacer.astro';
import TagsList from '@components/TagsList.astro';
import Tag from '@components/Programs/Tag.astro';
import { Image, Picture } from 'astro:assets';
import DateStatus from '@components/DateStatus.astro';
import Participants from '@components/Participants.astro';

const {
    title,
    subtitle,
    image,
    tags,
    gallery,
    presentationalDates,
    time,
    location,
    endDate,
    type,
    participants,
} = Astro.props.frontmatter;
const { slug } = Astro.props;
---

<Base title={title}>
    <div class="p-4">
        <div class="mx-auto max-w-2xl">
            <h1
                class="text-4xl uppercase font-semibold leading-tight tracking-tight text-center py-24"
            >
                {title}
                {
                    subtitle && (
                        <span>
                            : <br />
                            {subtitle}
                        </span>
                    )
                }
            </h1>
        </div>
        <HorizontalSpacer />
        <div class="mx-auto py-4 max-w-2xl">
            <div transition:name=`image-${slug}`>
                <Picture
                    src={image.url}
                    alt={image.alt}
                    class="mx-auto"
                    widths={[400, 600, 1200, image.url.width]}
                />
            </div>
        </div>
        <HorizontalSpacer />
        <div class="prose dark:prose-invert mx-auto my-4">
            <div class="my-4">
                <div class="font-mono text-sm">
                    {presentationalDates} | {time} | {location}
                </div>
                <div class="flex gap-2 my-4 grow-0 flex-wrap text-sm">
                    <Tag tag={type} />
                    <DateStatus date={endDate} />
                </div>
                <TagsList tags={tags} />
                {participants && <Participants participants={participants} />}
            </div>
            <slot />
        </div>
    </div>

    {
        gallery && (
            <>
                <HorizontalSpacer class="mx-4" />
                <Gallery gallery={gallery} />
            </>
        )
    }
</Base>
