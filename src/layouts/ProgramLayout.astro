---
import HorizontalSpacer from '@components/HorizontalSpacer.astro';
import TagsList from '@components/TagsList.astro';
import Base from '@layouts/Base.astro';
import { Image } from 'astro:assets';

const { title, subtitle, image, tags, gallery } = Astro.props.frontmatter;
const { slug } = Astro.props;

const allImages = await import.meta.glob('/src/content/programs/images/*/*');
let galleryImageKeys;
if (gallery) {
    galleryImageKeys = Object.keys(allImages).filter((key) =>
        key.includes(gallery)
    );
}
---

<Base title={title}>
    <div class="p-4">
        <div class="mx-auto max-w-2xl">
            <h1
                class="text-4xl uppercase font-semibold leading-tight tracking-tight text-center py-24"
            >
                {title}
                {
                    subtitle && (
                        <span>
                            : <br />
                            {subtitle}
                        </span>
                    )
                }
            </h1>
        </div>
        <HorizontalSpacer />
        <div class="mx-auto py-4 max-w-2xl">
            <div transition:name=`image-${slug}`>
                <Image
                    src={image.url}
                    alt={image.alt}
                    class="mx-auto"
                    widths={[400, 600, 1200, image.url.width]}
                />
            </div>
        </div>
        <HorizontalSpacer />
        <div class="prose dark:prose-invert mx-auto my-4">
            <TagsList tags={tags} />
            <slot />
        </div>
    </div>
    {
        gallery && (
            <>
                <HorizontalSpacer class="mx-4" />
                <div class="card-grid triple">
                    {gallery &&
                        galleryImageKeys.map((key) => (
                            <div>
                                <Image
                                    src={allImages[key]()}
                                    alt="Gallery Image"
                                    widths={[400, 600, 1200, 2000]}
                                    sizes="(min-width: 640px) 33vw, 100vw"
                                    class="aspect-square object-cover object-center"
                                />
                            </div>
                        ))}
                </div>
            </>
        )
    }
</Base>
