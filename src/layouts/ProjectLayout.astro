---
import Base from '@layouts/Base.astro';
import HorizontalSpacer from '@components/HorizontalSpacer.astro';
import TagsList from '@components/TagsList.astro';
import { Image, Picture } from 'astro:assets';
import { getCollection } from 'astro:content';
import { sortByPubDate } from 'src/utils/programFilters';
import ProgramCard from '@components/Programs/ProgramCard.astro';
import PeopleCard from '@components/PeopleCard.astro';

const { title, subtitle, image, tags, projectId, people } =
    Astro.props.frontmatter;
const { slug } = Astro.props;

const associatedPrograms = (
    await getCollection('programs', ({ data }) => {
        return data.assProjectId === projectId;
    })
).sort(sortByPubDate);

const peopleCollection = await getCollection('people');
---

<Base title={title}>
    <div class="p-4">
        <div class="mx-auto max-w-2xl">
            <h1
                class="text-4xl uppercase font-semibold leading-tight tracking-tight text-center py-24"
            >
                {title}
                {
                    subtitle && (
                        <span>
                            : <br />
                            {subtitle}
                        </span>
                    )
                }
            </h1>
        </div>
        <HorizontalSpacer />
        <div class="mx-auto py-4 max-w-2xl">
            <div transition:name=`image-${slug}`>
                <Picture
                    src={image.url}
                    alt={image.alt}
                    class="mx-auto"
                    widths={[400, 600, 1200, image.url.width]}
                />
            </div>
        </div>
        <HorizontalSpacer />
        <div class="prose dark:prose-invert mx-auto my-4">
            <TagsList tags={tags} />
            <slot />
        </div>
        {
            associatedPrograms && (
                <>
                    <HorizontalSpacer class="my-4" />
                    <h2 class="text-2xl sm:text-3xl font-medium text-center my-8">
                        Associated Programs
                    </h2>
                    <HorizontalSpacer class="my-4" />
                    <div class="card-grid double">
                        {associatedPrograms.map((program) => (
                            <ProgramCard
                                headingSize="text-xl"
                                slug={program.slug}
                                frontmatter={program.data}
                            />
                        ))}
                    </div>
                </>
            )
        }
        {
            people &&
                people.map((obj) => (
                    <div>
                        <HorizontalSpacer class="my-4" />
                        <h2 class="text-2xl sm:text-3xl font-medium text-center my-8">
                            {obj.label}
                        </h2>
                        <HorizontalSpacer class="my-4" />
                        {obj.list.map((person) => {
                            const [cardPerson] = peopleCollection.filter(
                                (obj) => obj.id === person
                            );
                            return (
                                <>
                                    <PeopleCard data={cardPerson} />
                                    <HorizontalSpacer class="spacer my-4" />
                                </>
                            );
                        })}
                    </div>
                ))
        }
    </div>
</Base>

<style>
    .spacer:last-of-type {
        display: none;
    }
</style>
