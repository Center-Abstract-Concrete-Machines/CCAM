---
import { getCollection } from 'astro:content';
import ProgramsLayout from '@layouts/ProgramsLayout.astro';
import { sortByPubDate } from 'src/utils/programFilters';

const heading = {
    title: 'Programs',
    description:
        'Our school supports interdisciplinary study in art, code, hardware and critical theory through events, classes, and workshops.',
};

const allPrograms = sortByPubDate(await getCollection('programs'));
---

<ProgramsLayout
    events={allPrograms}
    title={heading.title}
    description={heading.description}
    filter="none"
/>
