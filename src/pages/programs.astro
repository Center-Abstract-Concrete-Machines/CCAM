---
import { getCollection } from 'astro:content';
import ProgramsLayout from '@layouts/ProgramsLayout.astro';

const heading = {
    title: 'Programs',
    description:
        'Our programming aims to cultivate thoughtful and inquiring technical practices in the non-academic sound, media arts and theory community.',
};

const allPrograms = await getCollection('programs');
---

<ProgramsLayout
    events={allPrograms}
    title={heading.title}
    description={heading.description}
    filter="none"
/>
