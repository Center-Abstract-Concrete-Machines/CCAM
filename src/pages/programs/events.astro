---
import ProgramsLayout from '@layouts/ProgramsLayout.astro';
import { getCollection } from 'astro:content';

const filter = 'Event';
const events = await getCollection(
    'programs',
    ({ data }) => data.type === filter
);
---

<ProgramsLayout
    events={events}
    subtitle="Events"
    description="Events are a catchall for programming that gathers people together for performance, gallery openings, talks and panels, screenings, symposia, and more."
    filter={filter}
/>
