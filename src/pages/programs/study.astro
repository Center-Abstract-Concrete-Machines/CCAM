---
import ProgramsLayout from '@layouts/ProgramsLayout.astro';
import { getCollection } from 'astro:content';

const filter = 'Study';
const events = await getCollection(
    'programs',
    ({ data }) => data.type === filter
);
---

<ProgramsLayout
    events={events}
    subtitle="Studies"
    description="CCAM offers study opportunities relating to contemporary art, thought, and technics."
    filter={filter}
/>
