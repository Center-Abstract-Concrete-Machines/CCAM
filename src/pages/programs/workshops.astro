---
import ProgramsLayout from '@layouts/ProgramsLayout.astro';
import { getCollection } from 'astro:content';

const filter = 'Workshop';
const events = await getCollection(
    'programs',
    ({ data }) => data.type === filter
);
---

<ProgramsLayout
    events={events}
    subtitle="Workshops"
    description="Interactive and engaging workshops in speculative design, responsive media environments, analog computation and media synthesis, and more."
    filter={filter}
/>
